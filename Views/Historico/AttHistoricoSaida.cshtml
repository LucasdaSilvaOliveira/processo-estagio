@using System.Data;
@using System.Web;
@{
    ViewData["Title"] = "Atualizar registro";
}

@foreach(DataRow row in GetDataModel.DadosHistoricoSaidaAtt.Rows)
{
    <form id="form-saida-att" class="w-25" method="post" action="@Url.Action("AtualizarHistoricoSaida", "Historico")">
        <div class="form-group">
            <label for="quantidade">Quantidade</label>
            <input value="@HttpUtility.HtmlDecode(row["QUANTIDADE_SAIDA"].ToString())" type="number" class="form-control" name="quantidade" id="quantidade-saida-att" placeholder="Quantidades de produto">
        </div>
        <div class="w-100 d-flex">
            <div>
                <label for="dia">Dia</label>
                <input value="@HttpUtility.HtmlDecode(row["DIA_SAIDA"].ToString())" type="number" class="form-control" name="dia" id="dia-saida-att" placeholder="Dia">
            </div>
            <div class="form-group">
                <label for="mes">Mês</label>
                <input value="@HttpUtility.HtmlDecode(row["MES_SAIDA"].ToString())" type="number" class="form-control" name="mes" id="mes-saida-att" placeholder="01,02,03">
            </div>
            <div class="form-group">
                <label for="ano">Ano</label>
                <input value="@HttpUtility.HtmlDecode(row["ANO_SAIDA"].ToString())" type="number" class="form-control" name="ano" id="ano-saida-att" placeholder="Ano">
            </div>
        </div>
        <div class="form-group">
            <label for="hora">Hora</label>
            <input value="@HttpUtility.HtmlDecode(row["HORA_SAIDA"].ToString())" type="text" class="form-control" name="hora" id="hora-saida-att" placeholder="HH:MM">
        </div>
        <div class="form-group">
            <label for="local">Local</label>
            <input value="@HttpUtility.HtmlDecode(row["LOCAL_SAIDA"].ToString())" type="text" class="form-control" name="local" id="local-saida-att" placeholder="Local">
        </div>

        <a class="btn btn-secondary" href="@Url.Action("Index")">Voltar</a>
        <button type="submit" class="btn btn-primary mt-1">Atualizar</button>
    </form>
}

